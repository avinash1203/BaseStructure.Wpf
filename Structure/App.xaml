<Application x:Class="Structure.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Structure"
             StartupUri="Views/MainWindowView.xaml">
    <Application.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="ThemeDictionary">
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary  Source="Themes/Orange/OrangeTheme.xaml"/>
                        <!--<ResourceDictionary Source="Themes/Black/BlackTheme.xaml" />-->
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
                <ResourceDictionary x:Name="LanguageDictionary">
                    <ResourceDictionary.MergedDictionaries>
                        <!--<ResourceDictionary Source="Languages/German/German.xaml" />-->
                        <ResourceDictionary Source="Languages/English/English.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
                <ResourceDictionary Source="Styles/Base/ComboBoxStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>  
    </Application.Resources>
</Application>
